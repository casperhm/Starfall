public class World {
    public static void main(String[] args) {

    }

    public static void fight(Screen screen, TextGraphics textGraphics, int terminalWdith, int terminalHeight) {
        try (var in = Files.newBufferedReader(Paths.get("txt/enemy1.txt"), StandardCharsets.UTF_8)) {
            String line = null;
            while ((line = in.readLine()) != null) {
              textGraphics.putString(5,5,line);
            
          } catch (IOException e) {
      
            System.out.println("An error occurred.");
            e.printStackTrace();
          }
    }
}
